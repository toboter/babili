<h1>Edit oauth Accessibility</h1>
<%= simple_form_for([@application, @oauth_accessibility], url: oauth_application_accessibility_path, method: :put) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :oauth_application_id %>

  <div class="form-inputs">
    <%= @oauth_accessibility.accessor.inspect %>
    <%= f.input :can_manage %>
    <%= f.input :can_create %>
    <%= f.input :can_read %>
    <%= f.input :can_update %>
    <%= f.input :can_destroy %>
    <%= f.input :can_comment %>
    <%= f.input :can_publish %>
   
  </div>
  

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to 'Cancel', oauth_application_path(@oauth_accessibility.oauth_application), class: "btn btn-default" %>
  </div>
<% end %>