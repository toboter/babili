<div class="row">
  <div class="col-md-10 col-centered">
    <%= simple_form_for([@namespace, @repository, @document]) do |f| %>
      <%= f.error_notification %>

      <%= f.input :title, label: false, placeholder: 'Title' %>
      <%= f.input :content, label: false, placeholder: 'Your text ...', input_html: {class: 'froala-edit'} %>

      <%= button_tag(value: 'submit', class: "btn btn-default text-strong", data: { disable_with: "Please wait..." }) do %>
        <span class="glyphicon glyphicon glyphicon-floppy-save" aria-hidden="true"></span>
        Save
      <% end %>
      <%= link_to 'Cancel', (f.object.new_record? ? namespace_repository_documents_path(@namespace, @repository) : namespace_repository_document_path(@namespace, @repository, @document)), class: "btn btn-default text-strong no-link" %>

    <% end %>
  </div>
</div>

<script src="https://cdn.embedly.com/widgets/platform.js" charset="UTF-8"></script>