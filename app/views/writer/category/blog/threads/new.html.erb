<div class="row">
  <div class="col-md-10 col-centered">
    <h3>New thread</h3>
    <%= simple_form_for @thread, url: writer_category_blog_threads_path, as: :thread do |f| %>
      <%= f.error_notification %>

      <%= f.input :name, label: false, placeholder: 'Name' %>

      <%= button_tag(value: 'submit', class: "btn btn-default text-strong", data: { disable_with: "Please wait..." }) do %>
        <span class="glyphicon glyphicon glyphicon-floppy-save" aria-hidden="true"></span>
        Save
      <% end %>
      <%= link_to 'Cancel', (f.object.new_record? ? writer_category_blog_threads_path : writer_category_blog_thread_path(@thread)), class: "btn btn-default text-strong no-link" %>

    <% end %>
  </div>
</div>