<%= link_to 'Back', sti_blog_path(@type) %> | <%= link_to 'Show', @blog %>

<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :type, value: @type %>

  <div class="form-inputs">
    <%= f.input :author_id, 
      collection: User.all, 
      label_method: :display_name, 
      value_method: :id %>
    <%= f.input :title %>
    <%= f.input :content, input_html: { rows: 10 } %>
    <%= f.input :external_link %>
    <%= f.input :posted_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to 'Cancel', @blog.new_record? ? sti_blog_path(@type) : @blog, class: "btn btn-default" %>
  </div>
<% end %>
