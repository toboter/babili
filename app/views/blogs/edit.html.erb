<% title "Editing: #{@blog.title}", false %>

<% content_for :breadcrumbs do %>
  <%= content_tag :li, link_to('home', root_url) %>
  <%= content_tag :li, link_to(@blog.type.pluralize, sti_blog_path(@type)) %>
  <%= content_tag :li, @blog.title %>
  <%= content_tag :li, 'edit', class: 'active' %>
<% end %>

<%= render 'form', blog: @blog %>