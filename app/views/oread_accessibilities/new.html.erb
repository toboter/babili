<h1>New read Accessibility</h1>

<%= simple_form_for([@application, @oread_accessibility], url: oread_application_accessibilities_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :accessor, 
      collection: @accessors, 
      selected: @oread_accessibility.accessor, 
      label_method: :name, 
      value_method: :accessible, 
      include_blank: false,
      disabled: !@oread_accessibility.new_record? %>
    <%= f.hidden_field :oread_application_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to 'Cancel', oread_application_path(@oread_accessibility.oread_application), class: "btn btn-default" %>
  </div>
<% end %>