<% content_for :repo_layout do %>
    <div class="row">
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="list-group">
            <%= link_to 'Options', edit_namespace_repository_settings_options_path(@namespace, @repository), class: "list-group-item #{'active text-strong' if current_page?(edit_namespace_repository_settings_options_path(@namespace, @repository))}" %>
            <%= link_to 'Collaborators', namespace_repository_settings_collaborations_path(@namespace, @repository), class: "list-group-item #{'active text-strong' if current_page?(namespace_repository_settings_collaborations_path(@namespace, @repository))}" if can?(:read_collaborations, @repository) %>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <%= yield %>
      </div>
    </div>
<% end %>

<%= render template: "layouts/repositories/base" %>