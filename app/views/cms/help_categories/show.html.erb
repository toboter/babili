<% content_for(:breadcrumbs) do %>
  <%= content_tag :li, link_to('Help', cms_help_pages_url) %>
  <%= content_tag :li, @category.name, class: 'active' %>
<% end %>

<% content_for :container do %>
  <div class="row help-articles">
    <div class="col-sm-12 col-md-8 main">
      <ul class="categories-tree">
        <%= render 'category_list', category: @category %>
      </ul>
    </div>
    <%= content_tag :div, class: 'col-md-3 col-md-offset-1 sidebar' do %>
      <%= content_tag :div, class: 'actions' do %>
        <%= link_to fa_icon('add', text: 'Create a new help page entry'), new_cms_help_page_path(category_id: @category.id), class: 'btn btn-default text-strong text-primary pull-right' if can?(:create, CMS::HelpPage) %>
      <% end %>
    <% end %>
  </div>
<% end %>