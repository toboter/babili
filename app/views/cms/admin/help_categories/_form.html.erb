<%= simple_form_for @cms_help_category, url: url_for(controller: 'cms/admin/help_categories', action: @cms_help_category.new_record? ? 'create' : 'update') do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
