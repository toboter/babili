<div class="media" id="full-discussion-event-<%= title.created_at %>" style="overflow: visible;">
  <div class="media-left">
    <div style="width: 50px;", class: 'placeholder'></div>
  </div>
  <div class="media-body" id="discussion-event-<%= title.created_at %>" style="overflow: visible;">
    <%= fa_stacked_icon('pencil', base: "circle-o", class: 'text-small pull-left', style: 'font-size:.7em;margin-left:10px;') %>
    <div style="margin-left:40px;">
      <%= link_to background_image_div(title.author, :small_thumb, {class: 'media-object organization-member-avatar', style: 'height:20px;width:20px; background-position:center;'}), title.author.namespace %>
      <%= content_tag :span, title.author.name, class: 'text-strong' %>
      changed the title from <%= content_tag :span, title.changed_content, class: 'text-strong' %> to <%= content_tag :span, title.content, class: 'text-strong' %>
      <%= content_tag :span, "#{distance_of_time_in_words(title.created_at, Time.now)} ago", title: title.created_at %>
    </div>
  </div>
</div>