  <div class="row">
    <div class="col-sm-12">
      <%= simple_form_for [@namespace, @thread.discussable, :discussion, @thread] do |f| %>
        <%= f.error_notification %>
        <%= f.input :title %>

        <div class="media" id="discussion-comment-new">
          <div class="media-left">
            <%= link_to current_user.person.namespace do %>
              <%= background_image_div(current_user.person, :small_thumb, {class: 'media-object organization-member-avatar', style: 'height:50px;width:50px; background-position:center;'}) %>
            <% end %>
          </div>
          <div class="media-body">
            <%= f.simple_fields_for :comments, f.object.comments.build do |c| %>
              <%= c.simple_fields_for :versions, c.object.versions.build do |v| %>
                <%= v.input :body, label: false, as: :hidden, input_html: { id: 'comment_body' } %>
              <% end %>
            <% end %>
            <trix-editor input='comment_body'></trix-editor>
          </div>
        </div>
        <div class="actions --spacious-20">
          <%= f.submit class: 'btn btn-success pull-right text-strong' %>
           </div>
      <% end %>
    </div>
  </div>
