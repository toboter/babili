<%= content_tag :div, id: "person-#{person.id}", class: 'media list-group-item', style: "min-height:100px;" do %>
  <div class="media-left">
    <%= link_to person.namespace do %>
      <%= background_image_div(person, :small_thumb, {class: 'media-object img-circle', style: 'height:50px;width:50px; background-position:center;'}) %>
    <% end %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to person.name, person.namespace %></h4>
    <p class="text-small text-muted">
      <%= link_to truncate(person.about_me, length: 75, seperator: ' '), person.namespace, class: 'no-link' if person.about_me %>
    </p>
    <%= content_tag :p, 'Inactive (Account has been deleted).', class: 'text-italic text-strong text-gray text-small' if !person.user %>
  </div>
  <div class="media-right">
    <%= content_tag :span, fa_icon('universal-access'), data: {toggle: "tooltip", placement: "left"}, title: "Administrator" if person.is_admin? %>
  </div>
<% end %>