<%= simple_form_for([@application, @accessibility], url: search_application_accessibilities_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :project_id, 
      collection: @projects, 
      selected: @accessibility.project_id, 
      label_method: :name, 
      value_method: :id, 
      include_blank: false,
      disabled: !@accessibility.new_record? %>
    <%= f.hidden_field :application_id %>
    <%= f.input :access, 
      collection: ['read', 'write'], 
      include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>