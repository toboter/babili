          <p class="text-faded"><%= truncate(entry.content, length: 500, separator: ' ') { link_to " continue reading", entry, style: 'color: white;' } %></p>
          <p><%= link_to 'Weiterlesen', '' %></p>
          <hr class="light">
        <% end %>
      </div>
    </div>
  </div>
</section>


