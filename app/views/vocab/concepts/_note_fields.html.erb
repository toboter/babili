<div class="nested-fields note-fields">
  <%= f.input :body, label: 'Note' %>
  <%= f.input :language, collection: LanguageList::COMMON_LANGUAGES, 
    selected: f.object.new_record? ? LanguageList::LanguageInfo.find(browser.accept_language.first.code) : f.object.language %>
  <%= f.input :type, collection: Vocab::Note.types, selected: 'Definition' %>
  <%= f.input :creator_id, input_html: { value: (f.object.new_record? ? current_user.id : f.object.creator_id) }, as: :hidden %>
  <%= link_to_remove_association "remove note", f %>
</div>