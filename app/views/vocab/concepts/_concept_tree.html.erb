<tr>
  <%= content_tag :td, style: "padding-left: #{depth*20}px;" do %>
    <% if concept != @concept %>
      <strong> <%= link_to concept.name(@language), namespace_vocab_scheme_concept_path(@namespace, concept.scheme, concept.slug), style: ('text-decoration: underline;' if concept.root?) %></strong>
    <% else %>
      <%= content_tag :strong, concept.name(@language) %>
    <% end %>
  <% end %>
</tr>
<%= render partial: 'vocab/concepts/concept_tree', collection: concept.children, locals: {depth: depth+1}, as: :concept %>