<div class="nested-fields label-fields">
  <%= f.input :body, label: 'Term' %>
  <%= f.input :language, collection: LanguageList::COMMON_LANGUAGES, 
    selected: f.object.new_record? ? LanguageList::LanguageInfo.find(browser.accept_language.first.code) : f.object.language %>
  <%= f.input :type, collection: Vocab::Label.types, selected: 'Preferred' %>
  <%= f.input :vernacular, collection: Vocab::Label.vernaculars, selected: 'Undetermined' %>
  <%= f.input :historical, collection: Vocab::Label.historicals, selected: 'Current' %>
  <%= f.input :is_abbrevation, as: :boolean %>
  <%= f.input :creator_id, input_html: { value: (f.object.new_record? ? current_user.id : f.object.creator_id) }, as: :hidden %>
  <%= link_to_remove_association "remove label", f %>
</div>