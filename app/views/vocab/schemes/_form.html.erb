<% content_for :container do %>
  <div class="row vocab">
    <div class="col-sm-12 col-md-9 main">
      <%= simple_form_for [@namespace, :vocab, @scheme] do |f| %>
        <%= f.error_notification %>
        <%= f.input :abbr %>
        <%= f.input :title %>
        <%= f.input :definition %>

        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancel', (f.object.new_record? ? @namespace : namespace_vocab_scheme_path(@namespace, @scheme)), class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
<% end %>