<% title "Vocabularies" %>

<% content_for :container do %>
  <div class="vocab">
    <div class="row --spacious">
      <div class="col-sm-12 col-md-8 col-centered">
        <div class="page-header text-center borderless">
          <h2>Babylonian confusion ::vocabularies</h2>
          <p class="text-muted lead">
            Having 100 years of research history means having multiple naming conventions. Vocabularies shall 
            assist each researcher with an idea of a common wording and term translations as well as giving 
            anyone the possibility to name things in a heterogenus way, while still acting with a common idea.
          </p>
        </div>
        <%= render 'vocab/search/box' %>
        <div class="row schemes --spacious-80">
          <% @schemes.order(created_at: :desc).limit(4).each do |scheme| %>
            <%= link_to [:vocab, scheme] do %>
            <div class="col-md-6">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <%= content_tag :h5, scheme.title, class: 'text-strong' %>                   
                </div>
                <div class="panel-body">
                  <div class="definition">
                    <%= content_tag :span, scheme.definition, class: 'definition-text text-small --spacious-20 no-link' %>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
          <%= content_tag :div do %>
            <div class="col-md-6">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <%= content_tag :h5, 'Create new', class: 'text-strong' %>                   
                </div>
                <div class="panel-body">
                  <div style="height:100px">
                    <%= link_to fa_icon('plus', text: 'Vocabulary scheme'), new_vocab_scheme_path, 
                      class: 'btn btn-lg text-strong text-primary' %>
                  </div>
                </div>
              </div>
            </div>
          <% end if can?(:create, Vocab::Scheme)%>
          <div class="col-md-12">
            <%= link_to "View all #{content_tag :span, @schemes.count, class: 'badge'}".html_safe, vocab_schemes_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>