			<%= content_tag :div, class: "alert alert-info" do %>
              <%= notice %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            <% end if notice %>
            <%= content_tag :div, class: "alert alert-danger" do %>
              <%= alert %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            <% end if alert %>