<% title 'Edit repository' %>

<% content_for :breadcrumbs do %>
  <%= content_tag :li, link_to(@namespace.name, @namespace) %>
  <%= content_tag :li, link_to('Repositories', namespace_repositories_path(@namespace)) %>
  <%= content_tag :li, link_to(@repository.name, namespace_repository_path(@namespace, @repository)) %>
  <%= content_tag :li, yield(:title), class: 'active' %>
<% end %>

<% content_for :container do %>
  <div class="row">
    <div class="col-sm-12 col-md-9 main">
      <%= simple_form_for [@namespace, @repository] do |f| %>
        <%= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :description %>

        <div class="actions --spacious">
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to 'Cancel', (f.object.new_record? ? namespace_repositories_path(@namespace) : namespace_repository_path(@namespace, @repository)), class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :modals do %>
<% end %>