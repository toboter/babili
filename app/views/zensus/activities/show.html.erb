<% title "#{@activity.description }" %>

<% content_for :breadcrumbs do %>
  <%= content_tag :li, link_to('Agents', zensus_agents_path) %>
  <%= content_tag :li, link_to(@agent.default_name, zensus_agent_path(@agent)) %>
  <%= content_tag :li, link_to('Activities', zensus_agent_activities_path(@agent)) %>
  <%= content_tag :li, yield(:title), class: 'active' %>
<% end %>

<% content_for :container do %>
  <div class="zensus">
    <div class="row --spacious">
      <div class="col-sm-12 col-md-8 main">
        <strong><%= @activity.description %></strong>
        <ul>
          <%( @activity.event.activities-[@activity]).each do |activity| %>
            <li>
              <%= activity.event_to_actable %> <%= link_to activity.actable.default_name, [:zensus, activity.actable] %><br>
            </li>
          <% end %>
        </ul>
      </div>
      <%= content_tag :div, class: 'col-md-3 col-md-offset-1 sidebar' do %>
        <div class="list-group">
          <%= link_to fa_icon('edit', text: 'Edit'), edit_zensus_agent_activity_path(@agent, @activity), class: 'list-group-item' %>
          <%= link_to fa_icon('trash', text: 'Delete'), zensus_agent_activity_path(@agent, @activity), method: :delete, data: { confirm: 'Are you sure?' }, class: 'list-group-item' %>
          <%= link_to fa_icon('angle-double-up', text: 'Activities'), zensus_agent_activities_path(@agent), class: 'list-group-item' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>