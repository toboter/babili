<% title @agent.default_name %>

<% content_for :breadcrumbs do %>
  <%= content_tag :li, link_to('Agents', zensus_agents_path) %>
  <%= content_tag :li, yield(:title), class: 'active' %>
<% end %>

<% content_for :container do %>
  <div class="zensus">
    <div class="row --spacious">
      <div class="col-sm-12 col-md-8 main">
        <%= @agent.inspect %>
        <ul>
          <% @agent.appellations.each do |appellation| %>
            <li>
              <%= appellation.name %>
              <ul>
                <% appellation.appellation_parts.each do |part| %>
                  <li><%= part.inspect %></li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>

        <ul>
          <% @agent.events.each do |event| %>
            <li>
              <%= event.beginn %> <%= event.inspect %><br>
              <%= event.activities.inspect %>
            </li>
          <% end %>
        </ul>
      </div>
      <%= content_tag :div, class: 'col-md-3 col-md-offset-1 sidebar' do %>
        <div class="list-group">
          <%= link_to fa_icon('edit', text: 'Edit'), edit_zensus_agent_path(@agent), class: 'list-group-item' %>
          <%= link_to fa_icon('trash', text: 'Delete'), zensus_agent_path(@agent), method: :delete, data: { confirm: 'Are you sure?' }, class: 'list-group-item' %>
          <%= link_to fa_icon('angle-double-right', text: 'Activities'), zensus_agent_activities_path(@agent), class: 'list-group-item' %>
          <%= link_to fa_icon('angle-double-up', text: 'All agents'), zensus_agents_path, class: 'list-group-item' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>