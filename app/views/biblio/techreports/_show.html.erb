<div class="row">
  <div class="col-md-8">
    <h3>
      <%= techreport.title %><br>
      <small>by <%= techreport.creators_name_list.map{|a| link_to a.name, a.agent ? zensus_agent_path(a.agent) : zensus_name_path(a) }.join(', ').html_safe %> <%= techreport.year %> <%= '(' + techreport.month + ')' if techreport.month.present? %></small>
    </h3>
    <ul class="list-unstyled">
        <%= content_tag :li, "Serie: #{serie_for(techreport)}".html_safe if techreport.serie.present? %>   
        <%= content_tag :li, "Type: #{techreport.subtype}" if techreport.subtype.present? %>
        <%= content_tag :li, doi_url(techreport), class: 'text-small' if techreport.doi || techreport.url %>
        <%= content_tag :li, "Institution: #{link_to techreport.institution.try(:name), zensus_name_path(techreport.institution)}".html_safe if techreport.institution.present? %>
        <%= content_tag :li, "Place: #{places_url(techreport)}".html_safe if techreport.places.any? %>
    </ul>
    <%= content_tag :p, class: "text-gray" do %>
      <%= content_tag :span, 'Note: ', class: 'text-strong' %> <%= techreport.note %>
    <% end if techreport.note.present? %>

    <%= techreport.tag_list.map{|tag| content_tag(:span, tag, class: 'label label-default')}.join(' ').html_safe %>
  </div>
  <div class="col-md-4">
    <%= techreport.repositories.map{|repo| content_tag(:span, link_to(repo.name, namespace_repository_biblio_references_path(repo.owner, repo), style: 'color: white;'), class: 'label label-default')}.join(' ').html_safe %>
    <%= content_tag :div, render('biblio/shared/actions', entry: techreport, referencation: false, actions: true) %>
  </div>
</div>

<%= content_for :contents do %>
  <div class='techreport-contents'>
    <div class="row">
      <div class="col-md-7">
        <p class="text-gray text-small">
          <%= techreport.bibliographic(current_user.try(:person).try(:csl), 'en-US') %>
        </p>
        <%= content_tag :p, techreport.abstract %>
      </div>
      <div class="col-md-4 col-md-offset-1">
        <%= content_tag :pre, techreport.to_bib, style: 'font-size:smaller;' %>
      </div>
    </div>
  </div>
<% end %>