<tr id="biblio-entry-<%= booklet.id %>">
  <td width="5%">
    <%= content_tag :span, fa_icon(booklet.icon), title: 'Booklet' %>
  </td>
  <td width="95%">
    <%= render 'biblio/shared/actions', entry: booklet, referencation: local_assigns[:referencation], actions: local_assigns[:actions] %>
    <%= content_tag :span, link_to(booklet.citation, booklet), class: 'text-strong' %><br>
    <%= content_tag :span, booklet.bibliographic(current_user.try(:person).try(:csl), 'en-US'), class: 'text-small' %>
  </td>
</tr>