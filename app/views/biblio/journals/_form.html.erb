<%= simple_form_for @journal, 
  html: { class: 'form-horizontal', id: 'create_journal_form' },
  wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
  
  <%= f.input :name %>
  <%= f.input :abbr %>
  <hr>
  <%= f.input :key %>
  <%= f.input :note, as: :text %>
  <%= f.input :url %>
  <%= f.input :print_issn %>
  <hr>
  <%= f.input :tag_list, 
    as: :string,
    input_html: {
      value: f.object.tag_list.join(','),
      id: 'vocab_tag_list' }, 
    label: "Tags <span class='text-muted' style='font-weight:normal;'>(separate with comma)</span>".html_safe,
    hint: 'Add tags to categorize the journal and make it more discoverable.' %>
  
  <div class="row">
    <div class="col-md-6">
      <hr>
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Cancel', (@journal.new_record? ? biblio_entries_path : @journal), class: "btn btn-default" %>
    </div>
  </div>

<% end %>