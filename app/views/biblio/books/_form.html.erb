<%= simple_form_for @book, 
  html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>

  <%= f.simple_fields_for :referencations do |r| %>
    <%= r.hidden_field :repository_id %>
    <%= r.hidden_field :creator_id %>
  <% end %>
  
  <%= f.input :author_ids, 
    collection: @authors, 
    label_method: :name, 
    value_method: :id, 
    label: 'Authors', 
    selected: @book.creatorships.map(&:agent_appellation_id),
    required: true, 
    input_html: {
      multiple: true, 
      id: 'creators_names',
      class: 'creators-selectize'
    } %>
  
  <%= f.input :year %>
  <%= f.input :month %>
  
  <%= f.input :title, as: :text %>

  <%= f.input :publisher_id, 
    collection: @publishers, 
    label_method: :name, 
    value_method: :id, 
    include_blank: false, 
    label: "Publisher", 
    selected: @book.publisher_id, 
    input_html: {
      class: 'publisher-selectize'
    } %>
  
  <hr>

  <%= f.input :place_ids, 
    collection: @toponyms, 
    label_method: :given, 
    value_method: :id, 
    label: 'Places', 
    selected: @book.place_ids, 
    input_html: {
      multiple: true, 
      id: 'places_names',
      class: 'places-selectize'
    } %>
  
  <%= f.input :serie, 
    collection: @series, 
    label_method: :title, 
    value_method: :id, 
    include_blank: true, 
    label: "Serie", 
    selected: @book.serie.try(:id), 
    input_html: {
      id: 'serie_title',
      class: 'serie-selectize'
    } %>
  
  <%= f.input :volume %>
  <%= f.input :edition %>
  
  <hr>

  <%= f.input :note %>
  <%= f.input :key %>

  <%= f.input :print_isbn %>
  <%= f.input :url %>
  <%= f.input :doi %>
  <%= f.input :abstract, as: :text %>
  
  <hr>

  <%= f.input :tag_list, 
    as: :string,
    input_html: {
      value: f.object.tag_list.join(','),
      id: 'vocab_tag_list' }, 
    label: "Tags <span class='text-muted' style='font-weight:normal;'>(separate with comma)</span>".html_safe,
    hint: 'Add tags to categorize the book and make it more discoverable.' %>
  
    <div class="row">
      <div class="col-md-6">
        <hr>
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancel', (@book.new_record? ? namespace_repository_biblio_references_path(@entry.referencations.last.repository.owner, @entry.referencations.last.repository) : @book), class: "btn btn-default" %>
      </div>
    </div>

<% end %>

<% content_for :modals do %>
  <%= render 'zensus/appellations/new_modal' %>
  <%= render 'biblio/series/new_modal' %>
<% end %>