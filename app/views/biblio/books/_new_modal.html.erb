  <div class="modal fade book-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-md" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
          <h4 class="modal-title" id="myLargeModalLabel">Create a new book</h4>
        </div>
        <div class="modal-body biblio">
          <%= simple_form_for Biblio::Book.new(referencations: [Biblio::Referencation.new(repository_id: @repository.id, creator_id: current_person.id)]), html: {id: 'new_biblio_book'} do |f| %>
            <div class="row">
              <div class="col-md-12">
                <%= f.error_notification %>

                <%= f.simple_fields_for :referencations do |r| %>
                  <%= r.hidden_field :repository_id %>
                  <%= r.hidden_field :creator_id %>
                <% end %>


  <%= f.input :author_ids, 
    collection: @authors, 
    label_method: :name, 
    value_method: :id, 
    label: 'Authors', 
    required: true, 
    input_html: {
      multiple: true,
      class: 'zensus_appellations_selectize'
    } %>
  
  <%= f.input :year %>
  <%= f.input :month %>
  
  <%= f.input :title, as: :text %>

  <%= f.input :publisher_id, 
    collection: @publishers, 
    label_method: :name, 
    value_method: :id, 
    include_blank: false, 
    label: "Publisher", 
    input_html: {
      class: 'zensus_appellations_selectize'
    } %>
  
  <hr>

  <%= f.input :place_ids, 
    collection: @toponyms, 
    label_method: :given, 
    value_method: :id, 
    label: 'Places', 
    input_html: {
      multiple: true,
      class: 'locate_places_selectize'
    } %>
  
  <%= f.input :serie, 
    collection: @series, 
    label_method: :title, 
    value_method: :id, 
    include_blank: true, 
    label: "Serie", 
    input_html: {
      class: 'biblio_series_selectize'
    } %>
  
  <%= f.input :volume %>
  <%= f.input :edition %>
  
  <hr>

  <%= f.input :note %>
  <%= f.input :key %>

  <%= f.input :print_isbn %>
  <%= f.input :url %>
  <%= f.input :doi %>
  <%= f.input :abstract, as: :text %>
  

              </div>
              <div class="col-md-12 actions --spacious">
                <%= f.submit class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>