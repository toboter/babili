<div class="row">
  <div class="col-md-8">
    <h3>
      <%= unpublished.title %><br>
      <small>by <%= unpublished.creators_name_list.map{|a| link_to a.name, a.agent ? zensus_agent_path(a.agent) : zensus_name_path(a) }.join(', ').html_safe %> <%= unpublished.year %> <%= '(' + unpublished.month + ')' if unpublished.month.present? %></small>
    </h3>
    <ul class="list-unstyled">
        <%= content_tag :li, doi_url(unpublished), class: 'text-small' if unpublished.doi || unpublished.url %>
    </ul>
    <%= content_tag :p, class: "text-gray" do %>
      <%= content_tag :span, 'Note: ', class: 'text-strong' %> <%= unpublished.note %>
    <% end if unpublished.note.present? %>

    <%= unpublished.tag_list.map{|tag| content_tag(:span, tag, class: 'label label-default')}.join(' ').html_safe %>
  </div>
  <div class="col-md-4">
    <%= render 'biblio/referencations/add_repository', entry: unpublished %>
    <%= unpublished.repositories.map{|repo| content_tag(:span, link_to(repo.name, namespace_repository_biblio_references_path(repo.owner, repo), style: 'color: white;'), class: 'label label-default')}.join(' ').html_safe %>
  </div>
</div>

<%= content_for :contents do %>
  <div class='unpublished-contents'>
    <div class="row">
      <div class="col-md-7">
        <p class="text-gray text-small">
          <%= unpublished.bibliographic(current_user.try(:person).try(:csl), 'en-US') %>
        </p>
        <%= content_tag :p, unpublished.abstract %>
      </div>
      <div class="col-md-4 col-md-offset-1">
        <%= content_tag :pre, unpublished.to_bib, style: 'font-size:smaller;' %>
      </div>
    </div>
  </div>
<% end %>